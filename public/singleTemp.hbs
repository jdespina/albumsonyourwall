<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, maximum-scale=1, initial-scale=.41">
	<link rel="stylesheet" href="styles.css">
	<title>{{pureName}} Single Poster</title>
	<style>
		body {
			background-image: url(img/shadow1.jpg);
			background-attachment: fixed;
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}

		#photoContainer {
			margin: 0 auto;
			width: 800px;
			height:800px;
		}

		#photo {
			border: 10px solid whitesmoke;
			background-color: rgb(220, 217, 210);
			width: 800px;
			height: 800px;
		}

		#photo img {
			display: block;
			margin-left: auto;
			margin-top: 30px;
			margin-right: auto;
		}

		#titleInfo {
			height: 120px;
			display: inline-block;
			float: left;
			width: 310px;

		}
		#title {
			letter-spacing: 5px;
			float:left;
			font-family: 'Sarala', sans-serif;
			text-align: right;
			font-size: .1em;
			color: rgb(27, 27, 27);
			margin: 4px 70px;
			padding: 0px;
		}
		#title a{
			color: #2f2f2f;
		}
		#artists {
			letter-spacing: 5px;
			font: 400 15px/1.8 "Lato", sans-serif;
			margin: 4px 70px 0 auto;
			padding: 0px;
			text-align: right;
			padding-top: 0px;
		}
		#date {
			clear: right;
			float: right;
			margin-right: 70px;
			font-size: 30px;
			letter-spacing: 5px;
		}

		input[type="color"] {
			border: #777777 1px solid;
			position: relative;
			-webkit-appearance: none;
			border: none;
			width: 200px;
			height: 32px;
			padding: 0;
		}

		input[type="color"]::-webkit-color-swatch-wrapper {
			padding: 0;
		}

		input[type="color"]::-webkit-color-swatch {
			border: #777777 1px solid;
		}

		#controller {
			display: block;
			background-color: white;
			padding: 20px;
			border-top: 2px black solid;
			border-bottom: 2px black solid;
		}

		#enter {
			padding-top: 20px;
			padding-bottom: 20px;
			display: flex;
			justify-content: center;
		}

		#enter p {
			letter-spacing: 5px;
			text-transform: uppercase;
			margin: 0;
		}

		#controllerInput {
			letter-spacing: 3px;
			text-transform: uppercase;
			text-align: center;
			width: 100%;
			display: inline-flex;
			flex-wrap: wrap;
			justify-content: center;
			color: #777777;
			font-size: large;
		}

		.inputs {
			margin: 5px;
			height: 100px;
			flex-grow: 1;

		}

		#home {
			background-color: #777777;
			height: 500px;
			width: 100%;
		}
			#Notes{
			background-image: url("{{albImage}}");
			min-height: 400px;
			position: relative;
			background-attachment: fixed;
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}
		#noteSpan{
			position: absolute;
			left: 0;
			top: 50%;
			width: 100%;
			text-align: center;
			color: #000;
			display: block;
		}
		#noteSpan span{
			background-color: #777777;
			font-size: 25px;
			color: #f7f7f7;
			opacity: 1;
			padding: 18px;
			text-transform: uppercase;
			letter-spacing: 10px;
			text-align: center;
			font: 400 15px/1.8 "Lato", sans-serif;
		}
		#noteDescription h3{
			text-align: center;
			display: block;
			letter-spacing: 5px;
			text-transform: uppercase;
			font: 20px "Lato", sans-serif;
			color: #111;
			margin-block-start: 1em;
			margin-block-end: 1em;
			margin-inline-start: 0px;
			margin-inline-end: 0px;
		}
	</style>
	<script src="js/dom-to-image.js"></script>
	<script src="js/FileSaver.js"></script>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
</head>

<body>
	<div id="photoContainer">
		<div id="photo">
			<img src="{{albImage}}" alt="Poster Image" id="albImage" crossOrigin="Anonymous">
			<h2 id="title">{{{name}}}</h2>
			<div id="artists" style="float: right;">
				{{{artistName}}}
			</div>
			<div id="date">
				{{release_date}}
			</div>
		</div>

	</div>
	</div>
	<div id="controller">
		<div id="controllerInput">
			<div class="inputs">
				<label for="backColor">Select The Background Color: </label><br>
				<input type="color" id="backColor" name="favcolor" value="#dcd9d2">
			</div>
			<div class="inputs">
				<label for="titleColor">Select The Title Color: </label><br>
				<input type="color" id="titleColor" name="favcolor" value="#2f2f2f">
			</div>
			<div class="inputs">
				<label for="dateColor">Select The Date Color: </label><br>
				<input type="color" id="dateColor" name="favcolor" value="#777777">
			</div>
			<div class="inputs">
				<label for="artistColor">Select The Artist Color: </label><br>
				<input type="color" id="artistColor" name="favcolor" value="#777777">
			</div>
			<div class="inputs">
				<label for="borderColor">Select The Border Color: </label><br>
				<input type="color" id="borderColor" name="favcolor" value="#777777">
			</div>
		</div>
		<div id="enter">
			<button onclick="takeshot()">
				<p>Save Photo</p>
			</button>
		</div>


	</div>
	<div id="Notes">
		<div id="noteSpan">
			<span>Notice</span>
		</div>
	</div>
	<div id="noteDescription"
		style="border-top:2px black solid;border-bottom:2px black solid; color: #777;background-color:white;text-align:center;padding:25px 80px 50px 80px;text-align: justify;">
		<h3 style="">Ownership</h3>
		<p style="text-align: center; font-size: medium;">All rights belong to their respective owners. I do not own any of
			this content. This site is intended to provide information that might be of interest to users. The contents of
			this site, including
			but not limited to the content, images, and their arrangements.</p>
	</div>
	<script  type="text/javascript">
	let pho = document.getElementById('photo');
		var bC = document.getElementById("backColor");
		var titleC = document.getElementById('titleColor');
		var dateC = document.getElementById('dateColor');
		var artistC = document.getElementById('artistColor');
		var borderC = document.getElementById('borderColor');
		bC.addEventListener("input", viewBackColor, false);
		titleC.addEventListener("input", viewTitleColor, false);
		dateC.addEventListener("input", viewDateColor, false);
		artistC.addEventListener("input", viewArtistColor, false);
		borderC.addEventListener("input", viewBorderColor, false);
		function viewTitleColor(e) {
			document.getElementById("title1").style.color = event.target.value;
		}
		function viewDateColor(e) {
			document.getElementById("date").style.color = event.target.value;
		}
		function viewArtistColor(e) {
			document.getElementById("artists").style.color = event.target.value;
		}
		function viewBackColor(e) {
			pho.style.backgroundColor = event.target.value;
		}
		function viewBorderColor(e) {
			pho.style.borderColor = event.target.value;
		}</script>
	<script src="js/titleSizeSingle.js" type="text/javascript"></script>
</body>

</html>