	<link rel="preconnect" href="https://fonts.gstatic.com">
	<link href="https://fonts.googleapis.com/css2?family=Bungee+Shade&family=Sarala:wght@400;700&display=swap"rel="stylesheet">-->
	<style>
		@import url("https://fonts.googleapis.com/css?family=Playfair+Display&display=swap");
		body{
			background-image: url(img/shadow1.jpg);
			background-attachment: fixed;
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}
		#photoContainer{
			margin: 0 auto;
			width: 800px;
			height: 1200px;
		}
		#photoContainer.square{
			margin: 0 auto;
			width: 800px;
			height:800px;
		}
		#photo {
			border: 10px solid whitesmoke;
			/*padding: 4px;*/
			background-color: rgb(220,217,210);
			width: 800px;
			height: 1200px;
		}
		#photo.square{
			border: 10px solid whitesmoke;
			/*padding: 4px;*/
			background-color: rgb(220, 217, 210);
			width: 800px;
			height: 800px;
		}
		#photo img{
			display: block;
			margin-left: auto;
			margin-top: 30px;
			margin-right: auto;
			
		}
		#titleInfo {
			height:120px;
			display: inline-block;
			float: left;
			width: 310px;
			position: relative;
		}
		#rightside{
			float: right;
			width: 320px;
			height:450px;
			margin-right: 60px;
			position: relative;
		}
		#title{
			float: right;
			text-align: right;
			letter-spacing: 5px;
			font-family: 'Lato', sans-serif;
			font-weight: 600;
			font-size: .1em;
			width: auto;
			color: rgb(27, 27, 27);
			margin: 0px;
			padding: 0px;
		}
		#titleInfo h3{
			letter-spacing: 5px;
			font: 400 15px/1.8 "Lato", sans-serif;
			margin: 0px;
			padding: 0px;
			text-align: right;
			padding-top: 0px;
		}
		#tracks{
			width: 320px;
			padding-top: 5px;
			float:left;
			height:450px;
			margin-left: 70px;
			margin-bottom: 5px;
		}
		#tracks p{
			margin-top: 0px;
			font-family: 400 15px/1.8 "Lato", sans-serif;
			color: black;
			font-size: medium;
			letter-spacing: 3px;
			margin-bottom: 0px;
			
		}
		#date{
			position: absolute;
			bottom: 0;
			right: 0;
			font-size: 30px;
			letter-spacing: 5px;
		}
		input[type="color"] {
			border: #777777 1px solid;
			position: relative;
			-webkit-appearance: none;
			border: none;
			width: 200px;
			height: 32px;
			padding: 0;
		}
		input[type="color"]::-webkit-color-swatch-wrapper {
			padding: 0;
		}
		input[type="color"]::-webkit-color-swatch {
			border: #777777 1px solid;
		}
		#controller{
			display: block;

			background-color: white;
			padding: 20px;
			border-top:2px black solid;
			border-bottom:2px black solid;
		}
		#enter{
		
			padding-top: 20px;
			padding-bottom: 20px;
			display: flex;
			justify-content: center;
		}
		#enter p{
			letter-spacing: 5px;
			text-transform: uppercase;
			margin: 0;
		}
		#controllerInput {
			letter-spacing: 3px;
			text-transform: uppercase;
			text-align: center;
			width: 100%;
			display: inline-flex;
			flex-wrap: wrap;
			justify-content: center;
			color: #777777;
			font-size: large;
		}
		.inputs{
			margin: 5px;
			height: 100px;
			flex-grow:1;
			
		}
		#Notes{
			background-image: url("{{albImage}}");
			min-height: 400px;
			position: relative;
			background-attachment: fixed;
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
			padding: 0 20px;
		}
		#noteSpan{
			position: absolute;
			left: 0;
			top: 50%;
			width: 100%;
			text-align: center;
			color: #000;
			display: block;
		}
		#noteSpan span{
			background-color: #777777;
			font-size: 25px;
			color: #f7f7f7;
			opacity: 1;
			padding: 18px;
			text-transform: uppercase;
			letter-spacing: 10px;
			text-align: center;
			font: 400 15px/1.8 "Lato", sans-serif;
		}
		#noteDescription h3{
			text-align: center;
			display: block;
			letter-spacing: 5px;
			text-transform: uppercase;
			font: 20px "Lato", sans-serif;
			color: #111;
			margin-block-start: 1em;
			margin-block-end: 1em;
			margin-inline-start: 0px;
			margin-inline-end: 0px;
		}
		#titleInfo.square {
			height: 120px;
			display: inline-block;
			float: left;
			width: 310px;

		}		
		#title.square {
			letter-spacing: 5px;
			float:left;
			font-family: 'Sarala', sans-serif;
			text-align: left;
			font-size: .1em;
			color: rgb(27, 27, 27);
			margin: 4px 0 0 70px ;
			padding: 0px;
			width: 400px;
		}
		#title.square a{
			color: #2f2f2f;
		}

		#artists.square {
			position: relative;
			width: 235px;
		
			letter-spacing: 5px;
			font: 400 15px/1.8 "Lato", sans-serif;
			margin: 4px 70px 0 auto;
			padding: 0px;
			text-align: right;
			padding-top: 0px;
		}
		#date.square {
			position: relative;
			clear: right;
			float: right;
			margin-right: 70px;
			font-size: 30px;
			letter-spacing: 5px;
		}
		#switchDiv{
			position: relative;
			display: flex;
			margin: 0px auto;
			text-align: center;
			align-self: center;
			width: 300px;
		}
		#switchDiv p{
			text-align: right;
			letter-spacing: 3px;
			text-transform: uppercase;
			color: #777777;
			font-size: large;
		}
		.switch {
			position: relative;
			display: block;
			margin: 0px auto;
			text-align: center;
			align-self: center;
			width: 60px;
			height: 34px;
		}

		.switch input { 
			opacity: 0;
			width: 0;
			height: 0;
		}

		.slider {
			position: absolute;
			cursor: pointer;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background-color:  #2196F3;
			-webkit-transition: .4s;
			transition: .4s;
		}

		.slider:before {
			position: absolute;
			content: "";
			height: 26px;
			width: 26px;
			left: 4px;
			bottom: 4px;
			background-color: white;
			-webkit-transition: .4s;
			transition: .4s;
		}

		input:checked + .slider {
			background-color: #2196F3;
		}

		input:focus + .slider {
			box-shadow: 0 0 1px #2196F3;
		}

		input:checked + .slider:before {
			-webkit-transform: translateX(26px);
			-ms-transform: translateX(26px);
			transform: translateX(26px);
		}

		/* Rounded sliders */
		.slider.round {
			border-radius: 34px;
		}

		.slider.round:before {
			border-radius: 50%;
		}
	</style>
	<script src="js/dom-to-image.js"></script>
	<script src="js/FileSaver.js"></script>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
</head>
<body>
	<div id="photoContainer">
		<div id="photo">
			<img src="{{albImage}}" alt="Poster Image" id="albImage" crossOrigin="Anonymous">
			<div id="tracks">
				<div id="trackList" style="margin-top: 10px;" >{{{tracks}}}</div>
				
			</div>
			<div id="rightSide">
				<div id="titleInfo">
					<h2 id="title">{{name}} </h2>
					<div id="artists" style="float: right; clear:both;">
						<h3>{{artistName}}</h3>
						<h3>{{durationTime}}</h3>
					</div>
					
				</div>
				<div id="date">
					{{release_date}}
				</div>
			</div>
			<style>
				#copyrights{
					width: 100vh;
					float: right;
					text-align: right;
					margin: 30px 70px;
					font-size: .65em;
					overflow: hidden;
				}
			</style>
			<div id="copyrights">
				{{{recordlabel}}}
			</div>
		</div>
	</div>
	<div id="controller">
		<div id="switchDiv">
			<p>Square</p>
			<label class="switch">
				<input type="checkbox" id="size" onclick ="switchSize()" checked>
				<span class="slider round"></span>
			</label>
			<p>Vertical</p>
		</div>
		<script text="text/javascript">
			var check = document.getElementById("size");
			var text = document.getElementById("photo");
			var verticalInner = text.innerHTML;
			var squareInner = `<img src="{{albImage}}" alt="Poster Image" id="albImage" crossOrigin="Anonymous">
			<h2 id="title">{{{name}}}</h2>
			<div id="artists" style="float: right;">
				{{{artistName}}}
			</div>
			<div id="date">
				{{release_date}}
			</div>`;
		
			function switchSize(){
				
				if(check.checked == true){
					text.innerHTML = verticalInner;
					document.getElementById("photoContainer").classList.remove("square");
					document.getElementById("photo").classList.remove("square");
					document.getElementById("title").classList.remove("square");
					document.getElementById("titleInfo").classList.remove("square");
					document.getElementById("artists").classList.remove("square");
					document.getElementById("date").classList.remove("square");
					sizeTitle();
					sizeTracks();

				} else{
					text.innerHTML = squareInner;
					
					document.getElementById("photoContainer").classList.add("square");
					document.getElementById("photo").classList.add("square");
					document.getElementById("title").classList.add("square");
					document.getElementById("artists").classList.add("square");
					document.getElementById("date").classList.add("square");
					
					sizeSquareTitle();
				}
			}
			
			function sizeSquareTitle() {
					var el = document.getElementById('title');
					//var textHeight = window.getComputedStyle(el, null).getPropertyValue('font-size');
					let textHeight = 1;
					let character = el.innerHTML;

					while (!($('#title').height() > 70)) {
						textHeight = textHeight + .1;
						let newSize = textHeight.toString() + "em"
						document.getElementById('title').style.fontSize = newSize;

					}
					if ($('#title').height() > 120) {
						textHeight = textHeight - .1;
						let newSize = textHeight.toString() + "em"
						document.getElementById('title').style.fontSize = newSize;

					}

					while (($('#title').width() > 500)) {
						textHeight = textHeight - .1;
						let newSize = textHeight.toString() + "em"
						document.getElementById('title').style.fontSize = newSize;
					}
				}
		</script>
		<div id="controllerInput">
			<div class="inputs">
				<label for="backColor">Select The Background Color: </label><br>
				<input type="color" id="backColor" name="favcolor" value="#dcd9d2">
			</div>
			<div class="inputs">
				<label for="trackColor">Select The Track Color: </label><br>
				<input type="color" id="trackColor" name="favcolor" value="#2f2f2f">
			</div>
			<div class="inputs">
				<label for="titleColor">Select The Title Color: </label><br>
				<input type="color" id="titleColor" name="favcolor" value="#2f2f2f">
			</div>
			<div class="inputs">
				<label for="dateColor">Select The Date Color: </label><br>
				<input type="color" id="dateColor" name="favcolor" value="#777777">
			</div>
			<div class="inputs">
				<label for="artistColor">Select The Artist Color: </label><br>
				<input type="color" id="artistColor" name="favcolor" value="#777777">
			</div>
			<div class="inputs">
				<label for="borderColor">Select The Border Color: </label><br>
				<input type="color" id="borderColor" name="favcolor" value="#FFFFFF">
			</div>
		</div>
		<div id="enter">
			<button onclick="takeshot()">
				<p>Save Photo</p>
			</button>
		</div>	
	</div>
	<div id="Notes">
		<div id="noteSpan">
			<span>Notice</span>
		</div>
	</div>
	<div id="noteDescription" style="border-top:2px black solid;border-bottom:2px black solid; color: #777;background-color:white;text-align:center;padding:25px 80px 50px 80px;text-align: justify;">
